<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="palette" name="Palette" schema="schema/palette.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.st.rental.ui.category"
            name="%category.name">
      </category>
      <view
            category="com.st.rental.ui.category"
            class="com.st.rental.ui.views.RentalPropertyView"
            icon="icons/Rentals.png"
            id="com.st.rental.ui.view.rental.property"
            name="%view.name"
            restorable="true">
      </view>
      <view
            category="com.st.rental.ui.category"
            class="com.st.rental.ui.views.RentalAgencyView"
            icon="icons/Agency.png"
            id="com.st.rental.ui.view.rental.agency"
            name="%view.name.0"
            restorable="true">
      </view>
      <view
            category="com.st.rental.ui.category"
            class="com.st.rental.ui.views.CustomerView"
            icon="icons/Customers.png"
            id="com.st.rental.ui.view.customer"
            name="Customer"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.st.rental.ui.perspectives.RentalPerspective"
            id="com.st.rental.ui.perspectives.RentalPerspective"
            name="%perspective.name">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="com.st.rental.ui.preferencePages.palettes"
            class="com.st.rental.ui.prefs.RentalColorsPreferencePage"
            id="com.st.rental.ui.preferencePages.colors"
            name="Default Palette">
      </page>
      <page
            class="com.st.rental.ui.prefs.PalettesPreferencePage"
            id="com.st.rental.ui.preferencePages.palettes"
            name="Palettes">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.st.rental.ui.prefs.RentalColorsPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.st.rental.ui.commands.sample"
            name="%command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.st.rental.ui.handlers.SampleHandler"
            commandId="com.st.rental.ui.commands.sample">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="com.st.rental.ui.menus.main.sample"
               label="%menu.label">
            <command
                  commandId="com.st.rental.ui.commands.sample"
                  style="push"
                  tooltip="%command.tooltip">
            </command>
            <separator
                  name="com.st.rental.ui.separator1">
            </separator>
            <command
                  commandId="com.st.rental.ui.commands.sample"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.views.ResourceNavigator?after=additions">
         <menu
               id="com.st.rental.ui.menus.navigator.sample"
               label="%menu.label.0">
            <command
                  commandId="com.st.rental.ui.commands.sample"
                  style="push">
            </command>
         </menu>
         <command
               commandId="com.st.rental.ui.commands.sample"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:com.st.rental.ui.view.rental.agency?after=additions">
         <command
               commandId="com.st.rental.ui.commands.sample"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="com.st.rental.ui.palette">
      <palette
            id="com.st.rental.ui.palette.default"
            name="Default"
            paletteClass="com.st.rental.ui.palette.DefaultPalette">
      </palette>
      <palette
            id="com.st.rental.ui.palette.red"
            name="ILoveRed"
            paletteClass="com.st.rental.ui.palette.RedPalette">
      </palette>
   </extension>

</plugin>
